#include <iostream>
using namespace std;

class node{
    public:
    int data;
    node *next;
};

class list{
    public:
    node *head;
    void create(int A[], int n);
    void display();
    void insertAt(int pos, int data);
};

int main(){
    list a;
    int A[] = {1, 2, 3, 4, 5};
    a.create(A, 5);
    a.display();
    cout << endl;
    a.insertAt(2, 69);
    a.display();
    cout << endl;
}

void list::create(int A[], int n){
    int i;
    node *temp;
    node *last;
    head = new node();
    head->data = A[0];
    head->next = head;
    last = head;
    for(i = 1; i < n; i++){
        temp = new node();
        temp->data = A[i];
        temp->next = head;
        last->next = temp;
        last = last->next;
    }
}

void list::display(){
    node *temp = head;
    do{
        cout << temp->data << " ";
        temp = temp->next;
    }while(temp != head);
}

void list::insertAt(int pos, int data){
    int i;
    node *t = head;
    node *temp;
    temp = new node();
    temp->data = data;

    for(i = 0; i < pos; i++)
        t = t->next;
    temp->next = t->next;
    t->next = temp;
}
